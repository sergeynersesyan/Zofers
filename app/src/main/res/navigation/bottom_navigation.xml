<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/mobile_navigation"
	app:startDestination="@+id/navigation_home">

	<fragment
		android:id="@+id/navigation_home"
		android:name="com.zofers.zofers.ui.home.FeedFragment"
		tools:layout="@layout/fragment_feed" />

	<fragment
		android:id="@+id/navigation_notifications"
		android:name="com.zofers.zofers.ui.notifications.NotificationsFragment"
		android:label="@string/title_notifications"
		tools:layout="@layout/fragment_notifications" />

	<fragment
		android:id="@+id/navigation_profile"
		android:name="com.zofers.zofers.ui.profile.ProfileFragment"
		android:label="@string/title_dashboard"
		tools:layout="@layout/activity_profile" >
		<argument
			android:name="ARG_USER_ID"
			app:argType="string" />
	</fragment>
</navigation>