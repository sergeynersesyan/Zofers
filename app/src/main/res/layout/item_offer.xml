<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:padding="@dimen/activity_horizontal_margin">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:roundedCornerRadius="4dp" />

    <TextView
        android:id="@+id/city_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Yerevan" />

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:maxLines="3"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:ellipsize="end"
        tools:text="NICE PARTY in one of the best restaurants in Yerevan" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/costs_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/costs_background"
            android:textColor="@color/colorAccent"
            tools:text="Free for you" />

        <TextView
            android:id="@+id/people_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/costs_textView"
            android:layout_toRightOf="@+id/costs_textView"
            android:drawableLeft="@drawable/ic_people"
            android:drawableStart="@drawable/ic_people"
            android:gravity="end"
            tools:text="for 1 men" />

    </RelativeLayout>


</LinearLayout>